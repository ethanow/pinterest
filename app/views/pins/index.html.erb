<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.try(:email) %></td>
        <td><%= link_to 'Show', pin, class:"btn btn-primary" %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin), class:"btn btn-success" %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %></td>
        <% else %>
          <td colspan = "2"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path, class:"btn btn-success" %>
<% else %>
  <%= link_to 'Sign In', new_user_session_path, class:"btn btn-default"%>
  <%= link_to 'Sign Up', new_user_registration_path, class:"btn btn-success" %>
<% end %>
